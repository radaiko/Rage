<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:Rage.Pages"
        xmlns:models="clr-namespace:Rage.Models"
        xmlns:vm="clr-namespace:Rage.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Rage.Views.SettingsWindow"
        Title="Settings">
  <Window.DataTemplates>
    <DataTemplate DataType="{x:Type vm:ConfigRepoSearchPathViewModel}">
      <pages:ConfigRepoSearchPath/>
    </DataTemplate>
  </Window.DataTemplates> 

  <Grid ColumnDefinitions="50,Auto">
    <ListBox Grid.Column="0" Items="{Binding SettingsPageViewModels}">
      <ListBox.ItemTemplate>
        <DataTemplate>
            <Border CornerRadius="4" Padding="4">
              <Button Content="{Binding Name}" Command="{Binding $parent[Window].DataContext.SelectSetting}" CommandParameter="{Binding}" />
            </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <ContentControl Grid.Column="1" Content="{Binding CurrentSettingsPageViewModel}" />
  </Grid>
</Window>
